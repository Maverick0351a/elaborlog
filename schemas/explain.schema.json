{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Maverick0351a/elaborlog/schemas/explain.schema.json",
  "title": "Elaborlog Explain Output",
  "$defs": {
    "tokenContributor": {
      "type": "object",
      "required": ["token", "prob", "bits", "freq"],
      "properties": {
        "token": { "type": "string" },
        "prob": { "type": "number", "minimum": 0 },
        "bits": { "type": "number", "minimum": 0 },
        "freq": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "required": [
    "novelty", "score", "token_info_bits", "template_info_bits", "level_bonus",
    "template", "token_contributors", "line", "weights"
  ],
  "properties": {
    "novelty": { "type": "number", "minimum": 0, "maximum": 1 },
    "score": { "type": "number" },
    "token_info_bits": { "type": "number" },
    "template_info_bits": { "type": "number" },
    "level_bonus": { "type": "number" },
    "template": { "type": "string" },
    "template_probability": { "type": "number", "minimum": 0 },
    "token_contributors": { "type": "array", "items": { "$ref": "#/$defs/tokenContributor" } },
    "line": { "type": "string" },
    "weights": {
      "type": "object",
      "required": ["w_token", "w_template", "w_level"],
      "properties": {
        "w_token": { "type": "number" },
        "w_template": { "type": "number" },
        "w_level": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
